{
  "name": "@vltpkg/vsr",
  "version": "0.2.4",
  "license": "FSL-1.1-MIT",
  "author": "vlt technology inc. <support@vlt.sh> (http://vlt.sh)",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vltpkg/vltpkg.git",
    "directory": "src/vsr"
  },
  "bin": "./dist/bin/vsr.js",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "format": "prettier --write . --log-level warn --ignore-path ../../.prettierignore --cache",
    "format:check": "prettier --check . --ignore-path ../../.prettierignore --cache",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio --port 4985",
    "db:setup": "wrangler d1 execute vsr-local-database --file=src/db/migrations/0000_initial.sql --local --persist-to=local-store --no-remote",
    "db:drop": "wrangler d1 execute vsr-local-database --file=src/db/migrations/drop.sql --local --persist-to=local-store --no-remote && rm -rf local-store && rm -rf .wrangler",
    "serve:build": "pnpm run build && ./dist/bin/vsr.js",
    "serve:death": "echo \"Killing wrangler dev processes...\" && (pkill -f 'wrangler.*dev' || true) && sleep 1 && (pids=$(lsof -ti :1337 2>/dev/null; lsof -ti :3000 2>/dev/null) && [ -n \"$pids\" ] && echo \"Force killing remaining processes: $pids\" && kill -9 $pids || echo \"No remaining processes found\") && echo \"Done.\"",
    "build:dist": "rm -rf ./dist && mkdir -p ./dist/assets/public",
    "build:assets": "cp -r ./src/assets ./dist/ && cp -r ./node_modules/@vltpkg/gui/dist ./dist/assets/public",
    "build:bin": "mkdir -p ./dist/bin/demo && cp -r ./src/bin/demo ./dist/bin/ && esbuild ./src/bin/vsr.ts --outfile=./dist/bin/vsr.js --packages=external --platform=node --format=esm --log-level=silent",
    "build:worker": "wrangler deploy --dry-run --outdir dist &> /dev/null",
    "build": "pnpm run build:dist && pnpm run build:assets && pnpm run build:worker && pnpm run build:bin",
    "typecheck:worker": "tsc -p tsconfig.worker.json --noEmit",
    "typecheck": "pnpm run typecheck:bin && pnpm run typecheck:worker",
    "deploy": "pnpm run build && wrangler deploy",
    "test": "vitest"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250703.0",
    "@hono-rate-limiter/cloudflare": "^0.2.2",
    "@libsql/client": "^0.15.9",
    "@scalar/hono-api-reference": "^0.5.184",
    "@scalar/types": "^0.2.5",
    "@sentry/cloudflare": "^9.34.0",
    "@twind/core": "^1.1.3",
    "@twind/preset-autoprefix": "^1.0.7",
    "@twind/preset-tailwind": "^1.1.4",
    "@types/node": "catalog:",
    "@types/validate-npm-package-name": "^4.0.2",
    "@vltpkg/gui": "workspace:*",
    "@workos-inc/node": "^7.57.0",
    "autoprefixer": "^10.4.21",
    "better-sqlite3": "^11.10.0",
    "crypto": "npm:webcrypto-core@^1.8.1",
    "drizzle-kit": "^0.30.6",
    "drizzle-orm": "^0.41.0",
    "esbuild": "^0.25.5",
    "eslint": "catalog:",
    "get-npm-tarball-url": "^2.1.0",
    "hono": "^4.8.3",
    "hono-rate-limiter": "^0.4.2",
    "htmx.org": "^1.9.12",
    "hyperscript.org": "^0.9.14",
    "js-yaml": "^4.1.0",
    "libnpmpack": "^7.0.4",
    "npm-registry-fetch": "^17.1.0",
    "open": "^10.1.2",
    "schemes": "^1.4.0",
    "semver": "^7.7.2",
    "ssri": "^10.0.6",
    "streaming-tarball": "^1.0.3",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.20.3",
    "undici": "^7.11.0",
    "uuid": "^10.0.0",
    "validate-npm-package-name": "5.0.0",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "@vltpkg/package-info": "workspace:*",
    "@vltpkg/package-json": "workspace:*",
    "@vltpkg/server": "workspace:*",
    "minargs": "^2.0.3",
    "path-scurry": "^2.0.0",
    "wrangler": "^4.23.0"
  }
}
